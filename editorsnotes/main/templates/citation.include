{% load typogrify display %}

<div class="citation">
	{% filter typogrify %}
	<div class="citation-document">
		<i class="icon-file"></i>
		<a href="{{ cite.document.get_absolute_url }}">{{ cite.document.as_html }}</a>
	</div>
  {% endfilter %}
	{% if cite.has_notes %}
	<div class="citation-notes">
		{{ cite.notes|as_html }}
	</div>
	{% endif %}
</div>
