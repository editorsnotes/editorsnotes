{% load typogrify display %}

<div class="citation">
  {% filter typogrify %}
  {{ cite.document.as_html }}
  {{ cite.locator }}
  <a href="{{ cite.document.get_absolute_url }}">More info</a>
  {% endfilter %}
</div>
{% if cite.has_notes %}
<div class="citation-notes">
  {{ cite.notes|as_html|typogrify }}
</div>
{% endif %}
